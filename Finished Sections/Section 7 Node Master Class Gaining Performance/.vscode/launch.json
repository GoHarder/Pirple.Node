   "version": "0.2.0",
   "configurations": [
      {
         "type": "node",
         "request": "launch",
         "name": "Nodemon Debug",
         "runtimeExecutable": "nodemon",
         "program": "${workspaceFolder}/index.js",
         "restart": true,
         "console": "integratedTerminal"
      },
      {
         "type": "node",
         "request": "attach",
         "name": "Attach To Node",
         "processId": "${command:PickProcess}"
      }
   ]
}
